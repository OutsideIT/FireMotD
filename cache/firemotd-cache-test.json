{
  "firemotd": {
    "properties": {
      "theme": {
        "properties": {
          "name": "Basic",
          "creator": "Willem D'Haese",
          "created": "2020-06-08",
          "modified": "2020-06-20",
          "description": "A basic FireMotd theme",
          "version": "0.2"
        },
        "defaults": {
          "character": "#",
          "charcolor": "\\e[38;5;93m",
          "charstart": 5,
          "charinit": 2,
          "charfill": "false",
          "length": 79,
          "keycolor": "\\e[38;5;164m",
          "keystart": 4,
          "separator": "=>",
          "separatorcolor": "\\e[38;5;57m",
          "valuecolor": "\\e[38;5;207m",
          "highlightcolor": "\\e[38;5;219m"
        }
      },
      "data": [
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": "/"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": "<=",
              "charcolor": "\\e[38;5;163m",
              "charstart": 4,
              "charinit": 8,
              "charfill": "true",
              "separator": "",
              "data": "\\*\\* ${host_name_value}.${host_domain_value} \\*\\*"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": "\\"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": ">",
              "charstart": 6,
              "key": "Network    ",
              "data": "${host_ip_value}"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": ">",
              "charstart": 6,
              "key": "CPU        ",
              "data": "${cpu_usage_value}% usage, ${cpu_load1_value} / ${cpu_count_value} load"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": ">",
              "charstart": 6,
              "key": "Packages   ",
              "data": "${package_updates_value} ${package_manager_value} updates"
            }
          }
        },
        {
          "row": {
            "properties": {
              "type": "dynamic",
              "character": "/",
              "charcolor": "\\e[38;5;54m",
              "cache": "\\e[38;5;54m     //////////////////////////////////////////////////////////////////////////\\n\\033[0m"
            }
          }
        }
      ]
    }
  }
}

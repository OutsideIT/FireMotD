{
  "firemotd": {
    "properties": {
      "theme": {
        "properties": {
          "name": "ECS Host Basic",
          "creator": "Willem D'Haese",
          "created": "2020-06-08",
          "description": "A basic ECS host template",
          "version": "0.1"
        },
        "defaults": {
          "character": "#",
          "charcolor": "\\e[38;5;93m",
          "charstart": 1,
          "length": 79,
          "keycolor": "\\e[38;5;164m",
          "keystart": 4,
          "separator": "=>",
          "separatorcolor": "\\e[38;5;57m",
          "valuecolor": "\\e[38;5;207m",
          "highlightcolor": "\\e[38;5;219m"
        }
      }
    },
    "data": [
      {
        "row": {
          "properties": {
            "type": "dynamic",
            "character": "/",
            "charcolor": "\\e[38;5;54m"
          }
        }
      },
      {
        "row": {
          "properties": {
            "type": "dynamic",
            "character": "/",
            "charcolor": "\\e[38;5;54m",
            "data": "${host.name}"
          }
        }
      },
      {
        "row": {
          "properties": {
            "type": "dynamic",
            "character": "/",
            "charcolor": "\\e[38;5;54m"
          }
        }
      },
      {
        "row": {
          "properties": {
            "type": "dynamic",
            "character": "/",
            "charcolor": "\\e[38;5;54m",
            "data": "${package.updates.count} ${package.updates.type} updates."
          }
        }
      },
      {
        "row": {
          "properties": {
            "type": "dynamic",
            "character": "/",
            "charcolor": "\\e[38;5;54m"
          }
        }
      }
    ]
	}
}
